<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/readInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:background="@drawable/clip_info"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="2.0dip" >

    <ImageView
        android:id="@+id/readInfo_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_pageinfo_menu" />

    <TextView
        android:id="@+id/readPage"
        style="@style/read_info"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="10.0dip" />

    <TextView
        android:id="@+id/readNetwork"
        style="@style/read_info"
        android:layout_marginRight="5.0dip" />

    <TextView
        android:id="@+id/readTime"
        style="@style/read_info" />

    <LinearLayout
        android:layout_width="14.0dip"
        android:layout_height="8.0dip"
        android:layout_marginLeft="5.0dip"
        android:background="@drawable/battery_bg"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/battery"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2.0px"
            android:max="100"
            android:progressDrawable="@drawable/battery" />
    </LinearLayout>

    <View
        android:layout_width="1.0dip"
        android:layout_height="4.0dip"
        android:background="#ffffffff" />

</LinearLayout>