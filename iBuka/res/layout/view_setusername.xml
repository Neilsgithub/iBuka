<?xml version="1.0" encoding="utf-8"?>
<cn.ibuka.manga.ui.ViewSetUserName xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userSetNameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:padding="20.0dip" >

    <LinearLayout
        android:id="@+id/SetUserNameEditLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/setUserNameTips"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:text="@string/editUserNameTipsNormal"
            android:textColor="@color/listTitle"
            android:textSize="13.0sp" />

        <EditText
            android:id="@+id/setUserNameEdit"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginBottom="10.0dip"
            android:background="@drawable/search_text_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/listTitle"
            android:textCursorDrawable="@null"
            android:textSize="15.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/setUserNameCancelBtn"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/common_btn"
                android:text="@string/btnCancel"
                android:textColor="@drawable/common_btn_text_color"
                android:textSize="14.0sp" />

            <Button
                android:id="@+id/setUserNameOkBtn"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/common_btn"
                android:text="@string/btnOk"
                android:textColor="@drawable/common_btn_text_color"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>

<!--     <include layout="@layout/viewdownloadstate" /> -->

</cn.ibuka.manga.ui.ViewSetUserName>